<Menu>:
    BoxLayout:
        id:main_box
        canvas.before:
            Color:
                rgba:(254/255,254/255,233/255,1)
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 1
            id: box
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                id:title
                size_hint_y: .6
                Label:
                    color:(0,0,0,1)
                    font_size: 40
                    bold: True
                    text:"Magic Potions"
                Label:
                    color:(0,0,0,1)
                    font_size: 30
                    bold: True
                    text:"Gesture your Potions"
                BoxLayout:
                    orientation:"vertical"
                    sixe_hint_y: .25
                    BoxLayout:
                        orientation:"horizontal"
                        Label:
                            size_hint_x:.3
                            color:(0,0,0,1)
                            text:"Create you Potions ->"
                        Button:
                            size_hint_x:.65
                            text:"Create"
                            Image:
                                center_x: self.parent.center_x
                                center_y: self.parent.center_y
                        Label:
                            size_hint_x:.05
                    BoxLayout:
                        orientation:"vertical"
                        sixe_hint_y: .25
                        BoxLayout:
                            orientation:"horizontal"
                            Label:
                                size_hint_x:.3
                                color:(0,0,0,1)
                                text:"See and edit you Potions ->"
                            Button:
                                size_hint_x:.65
                                text:"edit"
                                Image:
                                    center_x: self.parent.center_x
                                    center_y: self.parent.center_y
                            Label:
                                size_hint_x:.05
                    BoxLayout:
                        orientation:"vertical"
                        sixe_hint_y: .25
                        BoxLayout:
                            orientation:"horizontal"
                            Label:
                                size_hint_x:.3
                                color:(0,0,0,1)
                                text:"Credits ->"
                            Button:
                                size_hint_x:.65
                                text:"edit"
                                on_press:
                                    root._see_Credits_()
                                Image:
                                    center_x: self.parent.center_x
                                    center_y: self.parent.center_y
                            Label:
                                size_hint_x:.05

<Credits>:
    BoxLayout:
        id:main_box
        canvas.before:
            Color:
                rgba:(254/255,254/255,233/255,1)
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation:"vertical"
            Label:
                font_size: 40
                bold: True
                color:(0,0,0,1)
                text:"Credits"
            Label:
                color:(0,0,0,1)
                text:"Team: Alchimisti pazzi\nLeader: Gargiulo Antonio Pio\nOther Member: Longobari Francesco, Matrone Francesco, Porpora Luigi"
            Button:
                text:"Menu"
                on_press:
                    root._close_Credits_